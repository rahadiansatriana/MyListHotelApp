<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="196dp"
        android:id="@+id/img_item_hotel"
        android:scaleType="centerCrop"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_item_hotel"
        android:padding="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Name"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_type"
            android:textSize="14sp"
            android:text="Type"
            android:drawableLeft="@drawable/ic_star_rate"
            android:drawableTint="@color/colorStar"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_location"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Location"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:drawableLeft="@drawable/ic_location_on"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Start from "
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_rate"
            android:textSize="20sp"
            android:text="Rate"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</RelativeLayout>